<div class="page_header">
	<h1>Configurações do atendimento online</h1>
</div>

<div class="inside">
	
	<%= form_tag '/administrator/configuracao_atendimento/salvar', :multipart => true do %>
		
		<div class="esquerda">
			
			<div class="field">
				<%= label_tag :nome_empresa %> 
				<%= text_field_tag :nome_empresa, Settings['QW3CHAT.nome_empresa'] %>
			</div>
			
			<div class="field">
				<%= label_tag :email_padrao %> 
				<%= text_field_tag :email_padrao, Settings['QW3CHAT.email_padrao'] %>
			</div>
			
			<div class="field">
				<%= label_tag :cor_topo %> 
				<%= text_field_tag :cor_topo, Settings['QW3CHAT.cor_topo'] %>
			</div>
			
			<div class="field">
				<%= label_tag :logo_upload, 'Logomarca' %> 
				<%= file_field_tag :logo_upload %>
  				<%= image_tag Settings['QW3CHAT.logo'], :width => "200", 
					:style => "border: 1px solid #888888; margin: 20px; display:block;" %>
			</div>
			
		</div>
		
		<div class="direita">
			
			<div class="field">
				<%= label_tag :texto_online %> 
				<%= text_area_tag :texto_online, Settings['QW3CHAT.texto_online'], {:size => "50x8"} %>
			</div>
			
			<div class="field">
				<%= label_tag :texto_offline %> 
				<%= text_area_tag :texto_offline, Settings['QW3CHAT.texto_offline'], {:size => "50x8"} %>
			</div>
			
		</div>
		<div class="clear"></div>
		
		<div class="actions">
			<%= submit_tag 'Salvar', :class => :button %>
		</div>
		
	<% end %>
	
</div>
