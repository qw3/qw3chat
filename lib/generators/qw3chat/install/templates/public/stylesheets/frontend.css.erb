html {
	height: 100%;
}

body {
	font-family: "Lucida Grande";
	margin:0;padding:0;
	height:100%;
	background:#EEE;
	background:-moz-linear-gradient(center top , #FFFFFF 0%, #CCCCCC 100%) repeat scroll 0 0 #eee;
	background:-webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFF), color-stop(100%,#CCC)) repeat scroll 0 0 #eee;	
}

div.clear {
	clear:both;
}

div.component {
	width: 50%;
	margin: 0 auto;
}

div.inside {
	text-align:center;
}

div.field {
	margin: 10px 0;
}

div.field input, textarea {
	background:#ebf4fa;

	color: #5b6d80;
	padding: 0px 10px;
	width: 400px;
	
   	border: 1px solid #c2c2c2;
	border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	box-shadow: 0 0 3px #CCC;
	-webkit-box-shadow: 0 0 3px #CCC;
	-moz-box-shadow: 0 0 3px #CCC;
	
	font-family: "Lucida Grande";
	font-size: 16px;
}

div.field input {
	height: 40px;
}

div.field textarea {
	height: 200px;
}

div.field label {
	font-family: "Lucida Grande";
	font-size: 16px;
	color: #5b6d80;
}

div.field select {
	color: #5b6d80;
	width: 200px;
}

.button {
	cursor:pointer;
	
	background: url("<%= asset_path 'lib/qw3chat/css/button_submit.gif' %>") no-repeat scroll right 0 padding-box #8BAD68;
	color: #3d4731;
	
	border: 1px solid #888888;
    border-radius: 6px 6px 6px 6px;
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(255, 255, 255, 0.7) inset;

	width: 250px;
	height: 40px;
	
	font-family: Arial,'Helvetica Neue',Helvetica,sans-serif;
    font-size: 17px;
    font-weight: bold;

	padding: 1px 45px 0 15px;
}

div.page_header h1 {
	text-align:center;
	font-family: "Lucida Grande";
	font-size: 18px;
	text-shadow: 0 0 1px #eee;
}

div.topo {
	width: 400px;
	margin: 0 auto;
}

div.texto-descritivo {
	float:left;
	width: 272px;
	font-size: 14px;
	text-align:left;
	margin: 20px 0;
}

div.status {
	float:right;
	width: 128px;
	font-size: 16px;
}

div.status .online, div.status .offline {
	height: 16px;
	padding-top: 64px;
	text-transform: uppercase;
	text-align:center;
}

div.status .online {
	background: url("<%= asset_path 'lib/qw3chat/icons/atendimento_online.png' %>") no-repeat scroll center top;	
}

div.status .offline {
	background: url("<%= asset_path 'lib/qw3chat/icons/atendimento_offline.png' %>") no-repeat scroll center top;
}

.LV_validation_message {
	display:block;
}

div.logo {
	text-align:center;
	margin: 10px;
}