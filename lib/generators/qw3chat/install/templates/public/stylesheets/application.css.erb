div#filtros {
	float:right;
	width: 50%;
}

div.botao-superior {
	margin: 30px 0;
}

div.pedido {
	box-shadow: 0 0 3px #CCC;
	border-radius: 6px;
	border: 1px solid #D7D7D7;
	padding: 10px;
	margin-bottom: 10px;
}

div.usuario {
	-webkit-box-shadow: 0 0 3px #CCC;
	-moz-box-shadow: 0 0 3px #CCC;
	box-shadow: 0 0 3px #CCC;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	border: 1px solid #D7D7D7;
	padding: 20px 20px 5px 20px;
	margin-bottom: 10px;
}

.usuario .numero-pedidos {
	font-size: 30pt;
	font-weight: bold;
	position: relative;
	top: -20px;
}

.usuario .nome {
	font-size: 14pt;
	margin-bottom: 10px;
}

.usuario .email {
	margin-bottom: 10px;
}

div.invisible {
	visibility:hidden;
	position:absolute;
}